
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Open New Store
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                               <a href="#">Dashboard</a>
                            </li>
                            <li class="active">
                                New Form
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

              
                <div class="row">
                    <div class="col-lg-6">

                     <%= form_for(@store) do |f| %>
                          <% if @store.errors.any? %>
                            <div id="error_explanation">
                              <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

                              <ul>
                              <% @store.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                              <% end %>
                              </ul>
                            </div>
                          <% end %>

                            <div class="form-group">
                                    <%= f.label :name %><br>
                                    <%= f.text_field :name %>
                            </div>


                            <div class="form-group">
                                    <%= f.label :contact_number %><br>
                                    <%= f.text_field :contact_number %>
                            </div>

                            <div class="form-group">
                                    <%= f.label :contact_address %><br>
                                    <%= f.text_area :contact_address, :rows => 5  %>
                            </div>

                            <div class="form-group">
                                    <label>About your store</label><br>
                                    <%= f.text_area :store_desc, :rows => 5  %>
                            </div>

                            <div class="form-group" style="display:none;">
                                    <%= f.text_field :merchant_id, :value => current_merchant.id %>
                            </div>

                            <div class="actions">
                                <%= f.submit :class => "btn btn-default" %>
                            </div>

                     <% end %>
                    </div>
                </div>
