  </div>
  <div class="form-group">
    <%= f.label :storename %><br>
    <%= f.text_field :storename, :class=>"form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, :class=>"form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :street %><br>
    <%= f.text_field :street, :class=>"form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city, :class=>"form-control input-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :postal %><br>
